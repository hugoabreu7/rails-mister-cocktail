<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">
    <%= simple_form_for(@cocktail) do |f| %>
      <% if @cocktail.errors.any? %>
       <div class="errors-container">
          <ul>
            <% @cocktail.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name %>
      <%= f.submit "Now", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
